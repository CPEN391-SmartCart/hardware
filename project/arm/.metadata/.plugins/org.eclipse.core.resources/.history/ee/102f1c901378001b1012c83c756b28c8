
#include <stdint.h>

#define SCK (volatile unsigned int *)(0xFF200080)
#define DT (volatile unsigned int *)(0xFF200090)

int hx711_is_ready();

void hx711_set_gain(uint8_t gain = 128);

long hx711_read();

long hx711_read_average(uint8_t times = 10);

double hx711_get_value(uint8_t times = 1);

float hx711_get_units(uint8_t times = 1);

void hx711_tare(uint8_t times = 10);

void hx711_set_scale(float scale = 1.0f);

float hx711_get_scale();

void hx711_set_offset(long offset = 0);

long hx711_get_offset();

void hx711_power_down();

void hx711_power_up();
