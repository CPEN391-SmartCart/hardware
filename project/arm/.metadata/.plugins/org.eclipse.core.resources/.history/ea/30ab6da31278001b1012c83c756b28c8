
#define SCK (volatile unsigned int *)(0xFF200080)
#define DT (volatile unsigned int *)(0xFF200090)

int is_ready();

void set_gain(uint8_t gain = 128);

long read();

long read_average(uint8_t times = 10);

double get_value(uint8_t times = 1);

float get_units(uint8_t times = 1);

void tare(uint8_t times = 10);

void set_scale(float scale = 1.0f);

float get_scale();

void set_offset(long offset = 0);

long get_offset();

void power_down();

void power_up();
